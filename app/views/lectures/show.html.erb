<div id="lectureNavbar">
	<h2 class="inline"><%= @lecture.name %></h2>
	<%= link_to "Back", user_root_path(current_user), :class => "inline navbar_link" %>
	<% if can? :manage, :all %>
		<%= link_to "Add Question", new_lecture_lecture_question_path(@lecture), :remote => true, :id => 'add_question_button', :class => 'navbar_link' %>
	<% end %>
</div>
<div id="lectureContainer">
	<%= render parse_lecture_name(@lecture.name) %>	
</div>
