var questionNumber = '<%= @comment.commentable.order_index %>';
var $target = $('.commentDisplay[value="' + questionNumber + '"]');

$target
	.html("")
	.append('<%= j render :partial => "comments/index", :locals => { :question => @comment.commentable } %>')
	.scrollTop($target[0].scrollHeight)
	.children().last().css('background-color', 'yellow')
	.animate({
		'background-color': '#fff'
	}, 1000);
$('textarea').val('');