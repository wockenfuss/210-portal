<% if question.comments.any? %>
	<% question.comments.each do |comment| %>
		<div>
			<p>
				<%= comment.content %>
			</p>
			<p class="attribution">
				<%= "-#{comment.user.email}" %>
				<em class="commentDate"><%= "#{time_ago_in_words(comment.updated_at)} ago" %></em>
			</p>
		</div>
		
	<% end %>
<% else %>
	<div>
		<p>There are no comments yet.</p>
	</div>
<% end %>