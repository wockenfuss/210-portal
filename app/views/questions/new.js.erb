var $form = $('#addQuestionForm');
$form.html("");
$form.append('<%= j render :partial => "questions/new", :locals => { :question => @question, :quiz => @quiz, :answer => @answer } %>');

if ( $form.is(':visible') ) {
	$('.questionLinks').parent().removeClass('disabledLinks')
			.unbind('click');
} else {
	$('.questionLinks').parent().addClass('disabledLinks')
		.bind('click', function(e) {
			e.preventDefault();
			e.stopPropagation();
		});
}
$form.slideToggle();
myApp.multipleChoiceQuestion();