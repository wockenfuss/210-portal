<div id="questionErrors"></div>
<%= form_for @question, :remote => true do |f| %>
  <div id="radioButtons">
    <div class="inline">
      <%= f.radio_button "multiple_choice", "false", :checked => true %>
      <%= f.label :essay, 'Essay' %>
    </div>
    <div class="inline">
      <%= f.radio_button "multiple_choice", "true", :checked => false %>
      <%= f.label :multiple_choice, 'Multiple Choice' %>
    </div>  
  </div>
  
	<div class="inline">
    <%= f.label :name %>
    <%= f.text_field :name, :placeholder => "Enter question name"%>
  </div>
  <div class="inline">
    <%= f.label :points %>
    <%= f.text_field :points %>
  </div>
	<div class="inline textArea">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>


  <div><%= f.submit %></div>
	<%= hidden_field_tag :quiz_id, @quiz.id %>
<% end %>

  <div id="answersForm">
    <%= render 'answers/new', :answer => answer %>
  </div>