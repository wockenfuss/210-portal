<span class="resourceName"><%= resource.name %></span>
<span class="resourceDate"><%= "#{resource.release_date.to_date}" if resource.release_date %></span>
<%= link_to "View/Edit", "#{resource_name.pluralize}/#{resource.id}/edit", :class => 'resourceLinks'%>
<%= link_to "Delete", "#{resource_name.pluralize}/#{resource.id}", :class => 'resourceLinks', :confirm => 'Are you sure you want to delete this quiz?', :method => :delete, :remote => true %>	