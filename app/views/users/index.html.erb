<p>Users: <%= @users.size %></p>
<ul>
	<% @users.each do |user| %>
		<li>
			<% if user.name %>
				<span><%= "#{user.name.split(' ').last}, #{user.name.split(' ').first}: " %></span>
			<% end %>
			<span><%= "#{user.email}"%></span> 
			<span><%= "Last signed in: #{time_ago_in_words(user.last_sign_in_at) if user.last_sign_in_at} ago."%></span>
			<%= link_to "View", user_root_path(user) %>
		</li>
	<% end %>	
</ul>
